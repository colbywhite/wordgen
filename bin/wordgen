#!/usr/bin/env ruby

require 'wordgen'
require 'wordgen/options'
require 'optparse'

opts = Wordgen::CliOptions.parse ARGV
word = Wordgen::Random.word opts
puts word
# Wordnik calls if opts[:verbose]

if opts[:verbose]
  require 'wordgen/wordnik'
  Wordgen::WordnikActions.print_definitions(word)
end

